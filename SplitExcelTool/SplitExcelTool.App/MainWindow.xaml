<Window x:Class="SplitExcelTool.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SplitExcelTool.App"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="32*"/>
            <ColumnDefinition Width="385*"/>
            <ColumnDefinition Width="383*"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button" Content="Choose File..." HorizontalAlignment="Left" VerticalAlignment="Top" Click="button_Click" Margin="10,53,0,0" Grid.ColumnSpan="2"/>
        <DataGrid x:Name="dataGrid" Margin="10,109,0,10" Grid.ColumnSpan="3"/>
    </Grid>
</Window>
